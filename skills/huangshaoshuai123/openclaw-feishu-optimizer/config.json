{
  "name": "openclaw-feishu-optimizer",
  "version": "1.0.0",
  "description": "OpenClaw 飞书体验优化者 | 飞书消息处理增强技能包",
  "author": "黄绍帅（黄白）",
  "language": "zh-CN",
  
  "features": {
    "voice_recognition": {
      "enabled": true,
      "provider": "google",
      "default_language": "zh-CN",
      "supported_languages": [
        "zh-CN",
        "en-US",
        "zh-TW",
        "ja-JP",
        "ko-KR",
        "fr-FR",
        "de-DE",
        "es-ES",
        "ru-RU",
        "pt-BR"
      ]
    },
    
    "message_formatting": {
      "enabled": true,
      "auto_punctuation": true,
      "auto_format": true,
      "emoji_support": true,
      "markdown_support": true,
      "mention_support": true
    },
    
    "response_optimization": {
      "enabled": true,
      "context_awareness": true,
      "smart_replies": true,
      "speed_optimization": true
    },
    
    "media_processing": {
      "audio": true,
      "image": false,
      "file": false
    }
  },
  
  "settings": {
    "timeout": 30,
    "retry_attempts": 3,
    "retry_delay": 1,
    "log_level": "INFO",
    "auto_update": false
  },
  
  "dependencies": {
    "python": [
      "SpeechRecognition",
      "pydub"
    ],
    "system": [
      "python3",
      "pip3"
    ]
  },
  
  "required_files": [
    "/root/.openclaw/workspace/skills/openclaw-feishu-optimizer/voice-recognize.py",
    "/root/.openclaw/workspace/skills/openclaw-feishu-optimizer/process-message.py"
  ],
  
  "example_config": {
    "voice_recognition": {
      "enabled": true,
      "default_language": "zh-CN"
    },
    "message_formatting": {
      "auto_punctuation": true
    }
  }
}
