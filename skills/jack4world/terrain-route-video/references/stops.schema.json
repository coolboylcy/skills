{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["stops"],
  "properties": {
    "stops": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": ["id", "name", "lon", "lat"],
        "properties": {
          "id": {"type": "string", "description": "Display id, e.g. 01"},
          "name": {"type": "string"},
          "lon": {"type": "number"},
          "lat": {"type": "number"}
        }
      }
    }
  }
}
