{
  "name": "ISPConfig",
  "version": "0.1.2",
  "description": "Manage ISPConfig servers: automated site provisioning, domains, mailboxes, DNS, databases, SSL, backups, and more.",
  "config": {
    "apiUrl": {
      "type": "string",
      "description": "ISPConfig Remote JSON API URL (e.g. https://server:8080/remote/json.php)",
      "required": true
    },
    "username": {
      "type": "string",
      "description": "ISPConfig remote API username",
      "required": true
    },
    "password": {
      "type": "string",
      "description": "ISPConfig remote API password",
      "required": true,
      "secret": true
    },
    "serverId": {
      "type": "number",
      "description": "Default ISPConfig server ID (usually 1 for single-server setups)",
      "default": 1
    },
    "defaultServerIp": {
      "type": "string",
      "description": "Default server IP for DNS A records"
    },
    "readOnly": {
      "type": "boolean",
      "description": "If true, only read operations are allowed",
      "default": false
    },
    "allowedOperations": {
      "type": "array",
      "description": "Whitelist of allowed tool names. Empty = all allowed.",
      "items": { "type": "string" },
      "default": []
    },
    "verifySsl": {
      "type": "boolean",
      "description": "Verify SSL certificate of ISPConfig server",
      "default": true
    }
  },
  "tools": [
    "isp_methods_list",
    "isp_system_info",
    "isp_provision_site",
    "isp_client_list",
    "isp_client_add",
    "isp_client_get",
    "isp_sites_list",
    "isp_site_get",
    "isp_site_add",
    "isp_domains_list",
    "isp_domain_add",
    "isp_dns_zone_list",
    "isp_dns_zone_add",
    "isp_dns_record_list",
    "isp_dns_record_add",
    "isp_dns_record_delete",
    "isp_mail_domain_list",
    "isp_mail_domain_add",
    "isp_mail_user_list",
    "isp_mail_user_add",
    "isp_mail_user_delete",
    "isp_db_list",
    "isp_db_add",
    "isp_db_user_add",
    "isp_ssl_status",
    "isp_quota_check",
    "isp_backup_list",
    "isp_shell_user_add",
    "isp_ftp_user_add",
    "isp_cron_list",
    "isp_cron_add"
  ]
}
