{
  "name": "memoria-system",
  "version": "1.0.0",
  "description": "A comprehensive long-term memory management system with human-like cognitive architecture",
  "author": "OpenClaw Community",
  "license": "MIT",
  "repository": "https://github.com/openclaw/skills/memoria-system",
  "keywords": ["memory", "cognitive", "knowledge-management", "ai-assistant"],
  
  "memory": {
    "base_path": "./memory",
    "structure": {
      "semantic": {
        "description": "Facts, concepts, and general knowledge",
        "path": "semantic",
        "files": ["facts.md", "concepts.md"]
      },
      "episodic": {
        "description": "Events, experiences, and conversations",
        "path": "episodic",
        "naming": "YYYY-MM-DD.md"
      },
      "procedural": {
        "description": "Skills, workflows, and habits",
        "path": "procedural",
        "files": ["skills.md", "workflows.md"]
      },
      "working": {
        "description": "Current session context",
        "path": "working",
        "files": ["current.md"]
      },
      "index": {
        "description": "Search indexes and metadata",
        "path": "index",
        "files": ["tags.json", "timeline.json"]
      }
    }
  },
  
  "backup": {
    "enabled": true,
    "path": "./backups",
    "retention_days": 30,
    "max_backups": 10,
    "compression": true,
    "schedule": "0 2 * * *"
  },
  
  "health_check": {
    "auto_fix": false,
    "check_interval_hours": 24,
    "integrity_checks": ["orphaned_files", "broken_links", "missing_index"]
  },
  
  "migration": {
    "version": "1.0.0",
    "compatibility": ["0.9.x", "1.0.x"],
    "auto_backup_before_migration": true
  }
}
